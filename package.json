{
  "name": "generalised-relayer",
  "version": "0.2.0.",
  "description": "",
  "author": "Cata Labs, Inc.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "postinstall": "typechain --target ethers-v6 --out-dir src/contracts abis/*.json && find src/contracts -type f -exec sed -i.tmp 's/from \"ethers\"/from \"ethers6\"/g' {} \\; && find src/contracts -type f -name '*.tmp' -exec rm {} \\;",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "before-test": "typechain --target ethers-v6 --out-dir tests/contracts tests/abis/*.json && find tests/contracts -type f -exec sed -i.tmp 's/from \"ethers\"/from \"ethers6\"/g' {} \\; && find tests/contracts -type f -name '*.tmp' -exec rm {} \\;",
    "test": "jest --config ./jest.config.ts --detectOpenHandles",
    "test:watch": "WATCH_MODE=true jest --config ./jest.config.ts --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate": "drizzle-kit generate:pg"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-ws": "^10.3.7",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/websockets": "^10.3.7",
    "@typechain/ethers-v6": "^0.5.1",
    "@wormhole-foundation/relayer-engine": "^0.3.2",
    "ajv": "^8.12.0",
    "axios": "^1.6.8",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.6",
    "drizzle-orm": "^0.29.1",
    "ethers": "^5.7.0",
    "ethers6": "npm:ethers@^6.11.1",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "pino": "^8.19.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "viem": "^2.15.1",
    "winston": "^3.13.0",
    "winston-transport": "^4.7.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ioredis": "^5.3.2",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.1.3"
  },
  "pnpm": {
    "overrides": {
      "@wormhole-foundation/relayer-engine>@certusone/wormhole-sdk": "0.10.15"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}